{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Run ASM via BAT",
            "type": "shell",
            "command": "${workspaceFolder}\\run.bat",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "shared"
            },
            "options": {
                "shell": {
                    "executable": "cmd.exe",
                    "args": ["/c", "start", "cmd", "/k", "${workspaceFolder}\\run.bat"]
                }
            },
            "problemMatcher": []
        }
    ]
}
